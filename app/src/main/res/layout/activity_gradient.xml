<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/gradButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Gradient"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CPButton1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="@+id/gradButton"
        app:layout_constraintTop_toBottomOf="@+id/gradButton" />

    <Button
        android:id="@+id/CPButton2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/gradButton"
        app:layout_constraintTop_toBottomOf="@+id/gradButton" />

    <Button
        android:id="@+id/CPButton3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/CPButton1"
        app:layout_constraintTop_toBottomOf="@+id/CPButton1" />

    <Button
        android:id="@+id/CPButton4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/CPButton2"
        app:layout_constraintTop_toBottomOf="@+id/CPButton2" />

    <Button
        android:id="@+id/grad1Button"
        android:layout_width="43dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/CPButton3"
        app:layout_constraintTop_toBottomOf="@+id/CPButton3" />

    <Button
        android:id="@+id/grad2Button"
        android:layout_width="43dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/CPButton3"
        app:layout_constraintTop_toBottomOf="@+id/CPButton3" />

    <Button
        android:id="@+id/grad3Button"
        android:layout_width="43dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/CPButton4"
        app:layout_constraintTop_toBottomOf="@+id/CPButton4" />

    <Button
        android:id="@+id/grad4Button"
        android:layout_width="43dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/CPButton4"
        app:layout_constraintTop_toBottomOf="@+id/CPButton4" />

    <EditText
        android:id="@+id/gradDelayText"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grad2Button" />

    <Button
        android:id="@+id/gradDelayButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:text="âž¤"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/gradDelayText"
        app:layout_constraintStart_toEndOf="@+id/gradDelayText"
        app:layout_constraintTop_toTopOf="@+id/gradDelayText" />

</androidx.constraintlayout.widget.ConstraintLayout>